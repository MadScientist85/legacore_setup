# Use package-lock.json for consistency
package-lock=true

# Ensure exact versions are installed
save-exact=false

# Increase network timeout for CI
fetch-timeout=60000

# Disable package-lock updates during install
package-lock-only=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=false

# Enable strict SSL
strict-ssl=true

# Registry
registry=https://registry.npmjs.org/

# Engine strict
engine-strict=false

# Fund messages
fund=false

# Audit
audit=true
